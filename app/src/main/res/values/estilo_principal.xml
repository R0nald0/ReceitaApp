<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BottomSheetDialogg" parent="Theme.Material3.DayNight.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
        <item name="borderRound">23dp</item>

    </style>

    <style name="BottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
         <item name="background">@android:color/transparent</item>
    </style>

    <style name="TextStyle" parent="TextAppearance.AppCompat">
         <item name="android:textColor">@color/black</item>
    </style>

    <style name="ImagemRounded"  >
        <item name="cornerSize">30%</item>
    </style>

    <style name="buttonStyle" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">50dp</item>
        <item name="backgroundTint">@color/vermelho_leve</item>

    </style>

    <style name="TextInputStyle" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxCornerRadiusBottomEnd">30dp</item>
        <item name="boxCornerRadiusTopEnd">30dp</item>
        <item name="boxCornerRadiusTopStart">30dp</item>
        <item name="boxCornerRadiusBottomStart">30dp</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
    </style>
